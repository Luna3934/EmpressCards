{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Empress Card Binder",
  "version": "0.1.1",
  "identifier": "com.luna.pdfcardbinder",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Empress Card Binder",
        "width": 1000,
        "height": 1200,
        "resizable": true,
        "label": "main"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "createUpdaterArtifacts": true,
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDdCRjM2NzNFQjdFN0FDOApSV1RJZW43cmN6YS9CMS9RYnVMejZ1UGZEM0xadlR1bTJIQ2xQWU02U3M1REdPYmRlQXMvb1ZhQgo=",
      "endpoints": [
        "https://github.com/Luna3934/EmpressCards/releases/latest/download/latest.json"
      ],
      "windows": { "installMode": "passive" }
    }
  }
}
